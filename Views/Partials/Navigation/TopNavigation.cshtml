@inherits Umbraco.Web.Mvc.UmbracoViewPage

@using Umbraco.Web;

@{ 
   var cartNumber = "1";
    var site = Model.Root();

     var home = (Home)site;

    var selection = site.Children.Where(x => x.IsVisible());

}

<nav class="navbar navbar-expand-lg navbar-light bg-light">

  <a class="navbar-brand" href="../">@home.Sitename</a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

    <span class="navbar-toggler-icon"></span>

  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">

      @foreach (var item in selection)

      {

        <li class="nav-item @(item.IsAncestorOrSelf(Model) ? "active" : null)">

          <a class="nav-link" href="@item.Url">
            
            
            @item.Name
            @if(item.Name=="Cart"){<span id="CartNumber">1</span> }

            @if(item.IsAncestorOrSelf(Model))

            {

              <span class="sr-only">(current)</span>

            }

          </a>

        </li>
        
      }
      
    <li class="nav-item dropdown">
        <a class="dropdown-toggle nav-link" data-toggle="dropdown" href="#">Change Cart
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li onClick="ChangeCart(1)"><a href="#">Select Cart 1</a></li>
          <li onClick="ChangeCart(2)"><a href="#">Select Cart 2</a></li>
          <li onClick="ChangeCart(3)"><a href="#">Select Cart 3</a></li>
        </ul>
      </li>
    
    
 

  </div>

</nav>